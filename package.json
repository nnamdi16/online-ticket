{
  "name": "rest-api-node-ts-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index",
  "typings": "dist/index",
  "engines": {
    "node":"10.16.2"
  },
  "heroku-prebuild": "yarn install --production=false",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
