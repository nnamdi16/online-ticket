    "helmet": "^3.13.0",
    "http-status": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "jwt-then": "^1.0.1",
    "mongoose": "^5.7.12",
    "paga-business": "^1.0.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/dotenv": "^4.0.3",
